
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String

  // relacionamento
  transactions Transaction[]
}

model Transaction {
  id          String      @id @default(uuid())
  amount      Decimal     @db.Decimal(10, 2)
  date        String      @db.VarChar(10) //YYYY-MM-DD
  type        TransactionType
  category    String
  description String?


  // relacionamento
  user        User        @relation(fields: [userId], references: [id])
  userId      String
}

// enum para organizar os tipos de transação
enum TransactionType {
  INCOME     // receita
  EXPENSE    // despesa
}

